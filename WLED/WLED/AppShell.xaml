<?xml version="1.0" encoding="UTF-8"?>
<Shell xmlns="http://xamarin.com/schemas/2014/forms"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:views="clr-namespace:WLED.Views"
       x:Class="WLED.AppShell"
       Title="WLED"
       BackgroundColor="#404552"
       TitleColor="White">

    <TabBar x:Name="AppTabBar">
        <Tab Title="Lights">
            <Tab.Icon>
                <FontImageSource
                    FontFamily="{StaticResource FontAwesomeRegular}"
                    Glyph="lightbulb"
                    Color="White"
                    Size="30"/>
            </Tab.Icon>
            <ShellContent>
                <views:DeviceListPage/>
            </ShellContent>
        </Tab>
        <Tab Title="Settings" >
            <Tab.Icon>
                <FontImageSource
                    FontFamily="{StaticResource FontAwesomeSolid}"
                    Glyph="cog"
                    Color="White"
                    Size="30"
                    />
            </Tab.Icon>
            <ShellContent>
                <views:DeviceListPage/>
            </ShellContent>
        </Tab>
    </TabBar>
</Shell>
